<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <movies_integration>
            <general>
                <enable>1</enable>
                <api_url>https://api.themoviedb.org/3/</api_url>
                <attempts>10</attempts>
                <cron>0 0 0 * * ?</cron>
            </general>
            <exhibition>
                <movies_row_qty>10</movies_row_qty>
            </exhibition>
        </movies_integration>
    </default>
</config>
